<div class="container mt-4">
  <% if @flex %>
    <!-- FLEX : Juste le pseudo -->
    <div class="text-center">
      <h1 class="page-title mb-4">Flex</h1>

      <div class="selected-icon-container mb-4">
    <div class="flex-card selected-icon">
      <%= image_tag("roles/flex.png", class: "flex-img") %>
    </div>
        <p class="selected-subtitle">Tu décideras ta classe plus tard !</p>
      </div>

      <%= link_to "← Retour au choix de classe", new_character_path, class: "btn btn-back mb-4" %>

      <%= form_with model: @character, local: true, class: "character-form" do |f| %>
        <% if @character.errors.any? %>
          <div class="alert alert-danger">
            <% @character.errors.full_messages.each do |msg| %>
              <p class="mb-0"><%= msg %></p>
            <% end %>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.label :pseudo, "Nom du personnage", class: "form-label" %>
          <%= f.text_field :pseudo, class: "form-control", placeholder: "Ex: Arthas" %>
        </div>

        <%= f.submit "Ajouter au roster", class: "btn btn-roster btn-lg mt-3" %>
      <% end %>
    </div>

  <% elsif @wow_class %>
    <!-- ÉTAPE 2 : Formulaire avec pseudo + spé -->
    <div class="text-center">
      <h1 class="page-title mb-4"><%= @wow_class.name %></h1>

      <div class="selected-icon-container mb-4">
        <div class="class-card selected-icon">
          <%= class_icon(@wow_class.name) %>
        </div>
        <p class="selected-subtitle">Choisis ta spécialisation</p>
      </div>

      <%= link_to "← Changer de classe", new_character_path, class: "btn btn-back mb-4" %>

      <%= form_with model: @character, local: true, class: "character-form" do |f| %>
        <%= f.hidden_field :wow_class_id, value: @wow_class.id %>

        <% if @character.errors.any? %>
          <div class="alert alert-danger">
            <% @character.errors.full_messages.each do |msg| %>
              <p class="mb-0"><%= msg %></p>
            <% end %>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.label :pseudo, "Nom du personnage", class: "form-label" %>
          <%= f.text_field :pseudo, class: "form-control", placeholder: "Ex: Arthas" %>
        </div>

        <div class="mb-4">
          <label class="form-label">Spécialisation</label>
          <div class="d-flex justify-content-center gap-4 mt-3">
            <% @specializations.each do |spec| %>
              <%= f.radio_button :specialization_id, spec.id, class: "spec-radio", id: "spec_#{spec.id}" %>
              <label for="spec_<%= spec.id %>" class="text-center">
                <div class="spec-card">
                  <%= image_tag("roles/#{spec.role}.png", class: "spec-icon") %>
                </div>
                <div class="spec-name"><%= spec.name %></div>
              </label>
            <% end %>
          </div>
        </div>

        <%= f.submit "Ajouter au roster", class: "btn btn-roster btn-lg mt-3" %>
      <% end %>
    </div>

  <% else %>
    <!-- ÉTAPE 1 : Choix de la classe en cercle -->
    <h1 class="text-center page-title mb-0">Choisis ta classe</h1>

    <div class="circle-container">
      <!-- FLEX au centre -->
      <div class="flex-center">
        <%= link_to new_character_path(flex: true), class: "text-decoration-none" do %>
         <div class="flex-card">
  <%= image_tag("roles/flex.png", class: "flex-img") %>
</div>
          <div class="flex-label">Flex</div>
        <% end %>
      </div>

      <!-- Classes autour (calculé dynamiquement) -->
      <% @wow_classes.each_with_index do |wow_class, index| %>
        <div class="class-item" style="transform: rotate(<%= index * 27.7 %>deg) translateY(-280px) rotate(<%= -index * 27.7 %>deg);">
          <%= link_to new_character_path(wow_class_id: wow_class.id), class: "text-decoration-none" do %>
            <div class="class-card">
              <%= class_icon(wow_class.name) %>
            </div>
            <span class="class-name"><%= wow_class.name %></span>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
