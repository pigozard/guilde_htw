<tr>
  <td>
    <strong><%= character.pseudo %></strong>
  </td>

  <td>
    <% if character.wow_class %>
      <div class="hw-table-class">
        <%= image_tag("classes/#{character.wow_class.name.parameterize(separator: '_')}.png", class: "hw-table-class-icon", alt: character.wow_class.name) %>
        <span><%= character.wow_class.name %></span>
      </div>
    <% else %>
      <span class="hw-table-flex">Flex</span>
    <% end %>
  </td>

  <td>
    <% if character.specialization %>
      <%= character.specialization.name %>
    <% else %>
      <span style="color: #666;">-</span>
    <% end %>
  </td>

  <td>
    <% if character.specialization %>
      <%= image_tag("roles/#{character.specialization.role}.png", class: "role-icon", alt: character.specialization.role) %>
    <% else %>
      <%= image_tag("roles/flex.png", class: "role-icon", alt: "flex") %>
    <% end %>
  </td>

  <td>
    <% if user_signed_in? && character.user == current_user %>
      <div class="hw-table-actions">
        <%= button_to character_path(character),
            method: :delete,
            class: "hw-btn hw-btn-danger hw-btn-sm hw-btn-icon",
            data: { turbo_confirm: "Supprimer ce perso ?" },
            title: "Supprimer" do %>
          âœ•
        <% end %>
      </div>
    <% end %>
  </td>
</tr>
