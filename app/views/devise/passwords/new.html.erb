<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1 class="auth-title">Mot de passe oublié ?</h1>
      <p class="auth-subtitle">On va arranger ça !</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="auth-form">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "Ton email",
                    input_html: { autocomplete: "email", class: "auth-input" } %>

        <%= f.button :submit, "Envoyer les instructions", class: "auth-btn" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "← Retour à la connexion", new_session_path(resource_name), class: "auth-link" %>
    </div>
  </div>
</div>
