<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <%= image_tag "logo.png", class: "auth-logo", alt: "Logo" %>
      <h1 class="auth-title">Connexion</h1>
      <p class="auth-subtitle">Bienvenue, champion !</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="auth-form">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "Email",
                    input_html: { autocomplete: "email", class: "auth-input" } %>

        <%= f.input :password,
                    required: true,
                    label: false,
                    placeholder: "Mot de passe",
                    input_html: { autocomplete: "current-password", class: "auth-input" } %>

        <div class="auth-remember">
          <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" %>
        </div>

        <%= f.button :submit, "Connexion", class: "auth-btn" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: "auth-link" %>
      <span class="auth-separator">•</span>
      <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "auth-link" %>
    </div>
  </div>
</div>
