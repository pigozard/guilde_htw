<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1 class="auth-title">Mon profil</h1>
      <p class="auth-subtitle">ğŸ‘¤ <%= current_user.pseudo %></p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="auth-form">
        <%= f.input :pseudo,
                    required: true,
                    label: false,
                    placeholder: "Pseudo",
                    input_html: { autocomplete: "pseudo", class: "auth-input" } %>

        <%= f.input :email,
                    required: true,
                    label: false,
                    placeholder: "Email",
                    input_html: { autocomplete: "email", class: "auth-input" } %>

        <hr class="auth-divider">

        <p class="auth-section-title">Changer de mot de passe</p>

        <%= f.input :password,
                    required: false,
                    label: false,
                    placeholder: "Nouveau mot de passe",
                    hint: false,
                    input_html: { autocomplete: "new-password", class: "auth-input" } %>

        <%= f.input :password_confirmation,
                    required: false,
                    label: false,
                    placeholder: "Confirmer le nouveau mot de passe",
                    input_html: { autocomplete: "new-password", class: "auth-input" } %>

        <p class="auth-hint">Laisse vide si tu ne veux pas changer</p>

        <hr class="auth-divider">

        <%= f.input :current_password,
                    required: true,
                    label: false,
                    placeholder: "Mot de passe actuel (requis)",
                    input_html: { autocomplete: "current-password", class: "auth-input" } %>

        <%= f.button :submit, "Sauvegarder", class: "auth-btn" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "â† Retour Ã  l'accueil", root_path, class: "auth-link" %>
    </div>

    <hr class="auth-divider">

    <div class="auth-danger-zone">
      <p class="auth-danger-title">âš ï¸ Zone dangereuse</p>
      <%= button_to "Supprimer mon compte", registration_path(resource_name), method: :delete, class: "auth-btn-danger", data: { turbo_confirm: "Tu es sÃ»r ? Cette action est irrÃ©versible !" } %>
    </div>
  </div>
</div>
