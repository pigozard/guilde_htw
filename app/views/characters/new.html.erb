<style>
  body {
    background-color: #1a1a1a;
    color: #ffffff;
  }

  .form-control {
    background-color: #2d2d2d;
    border-color: #404040;
    color: #ffffff;
    max-width: 400px;
    margin: 0 auto;
  }

  .form-control:focus {
    background-color: #333333;
    border-color: #ffc107;
    color: #ffffff;
    box-shadow: none;
  }

  /* ===== FLEX AU CENTRE ===== */
  .flex-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  .flex-card {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background-color: #2d2d2d;
    border: 3px solid #ffc107;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    cursor: pointer;
    margin: 0 auto;
  }

  .flex-card:hover {
    background-color: #ffc107;
    box-shadow: 0 0 25px #ffc107;
    transform: scale(1.1);
  }

  .flex-card:hover .flex-icon {
    color: #1a1a1a;
  }

  .flex-icon {
    font-size: 40px;
    color: #ffc107;
    transition: color 0.3s;
  }

  .flex-label {
    color: #ffc107;
    margin-top: 10px;
    font-weight: bold;
  }

  /* ===== CLASSES (cercle) ===== */
  .circle-container {
    position: relative;
    width: 700px;
    height: 700px;
    margin: 20px auto;
  }

  .class-item {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 80px;
    height: 80px;
    margin: -40px;
    text-align: center;
  }

  .class-card {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background-color: #2d2d2d;
    border: 3px solid #404040;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    cursor: pointer;
  }

  .class-card:hover {
    border-color: #ffc107;
    box-shadow: 0 0 20px #ffc107;
    transform: scale(1.1);
  }

  .class-image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  .class-name {
    display: block;
    margin-top: 10px;
    font-size: 13px;
    font-weight: 500;
    white-space: nowrap;
    color: #cccccc;
  }

  .class-item:hover .class-name {
    color: #ffc107;
  }

  /* ===== SPECS ===== */
  .spec-card {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 3px solid #404040;
    overflow: hidden;
    margin: 0 auto;
    cursor: pointer;
    transition: all 0.3s;
  }

  .spec-card:hover {
    border-color: #ffc107;
    box-shadow: 0 0 20px #ffc107;
  }

  .spec-icon {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .spec-name {
    color: #cccccc;
    font-size: 13px;
    margin-top: 8px;
  }

  .spec-radio {
    display: none;
  }

  .spec-radio:checked + label .spec-card {
    border-color: #ffc107;
    box-shadow: 0 0 25px #ffc107;
  }

  .spec-radio:checked + label .spec-name {
    color: #ffc107;
  }

  /* ===== BOUTONS ===== */
  .btn-primary {
    background-color: #3b82f6;
    border: none;
    padding: 12px 30px;
    font-size: 16px;
  }

  .btn-primary:hover {
    background-color: #2563eb;
  }

  .btn-link {
    color: #6ea8fe;
  }

  .btn-link:hover {
    color: #ffc107;
  }
</style>

<div class="container mt-4">
  <% if @flex %>
    <!-- FLEX : Juste le pseudo -->
    <div class="text-center">
      <div class="flex-card" style="margin: 0 auto 20px;">
        <span class="flex-icon">?</span>
      </div>
      <h1 class="mb-3">Flex</h1>
      <p class="text-muted mb-4">Tu décideras ta classe plus tard !</p>

      <%= link_to "← Retour", new_character_path, class: "btn btn-link mb-4" %>

      <%= form_with model: @character, local: true do |f| %>
        <% if @character.errors.any? %>
          <div class="alert alert-danger">
            <% @character.errors.full_messages.each do |msg| %>
              <p class="mb-0"><%= msg %></p>
            <% end %>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.label :pseudo, "Nom du personnage", class: "form-label" %>
          <%= f.text_field :pseudo, class: "form-control", placeholder: "Ex: Arthas" %>
        </div>

        <%= f.submit "Ajouter au roster", class: "btn btn-primary btn-lg mt-3" %>
      <% end %>
    </div>

  <% elsif @wow_class %>
    <!-- ÉTAPE 2 : Formulaire avec pseudo + spé -->
    <div class="text-center">
      <h1 class="mb-3"><%= @wow_class.name %></h1>
      <%= link_to "← Changer de classe", new_character_path, class: "btn btn-link mb-4" %>

      <%= form_with model: @character, local: true do |f| %>
        <%= f.hidden_field :wow_class_id, value: @wow_class.id %>

        <% if @character.errors.any? %>
          <div class="alert alert-danger">
            <% @character.errors.full_messages.each do |msg| %>
              <p class="mb-0"><%= msg %></p>
            <% end %>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.label :pseudo, "Nom du personnage", class: "form-label" %>
          <%= f.text_field :pseudo, class: "form-control", placeholder: "Ex: Arthas" %>
        </div>

        <div class="mb-4">
          <label class="form-label">Spécialisation</label>
          <div class="d-flex justify-content-center gap-4 mt-2">
            <% @specializations.each do |spec| %>
              <%= f.radio_button :specialization_id, spec.id, class: "spec-radio", id: "spec_#{spec.id}" %>
              <label for="spec_<%= spec.id %>" class="text-center">
                <div class="spec-card">
                  <%= image_tag("roles/#{spec.role}.png", class: "spec-icon") %>
                </div>
                <div class="spec-name"><%= spec.name %></div>
              </label>
            <% end %>
          </div>
        </div>

        <%= f.submit "Ajouter au roster", class: "btn btn-primary btn-lg mt-3" %>
      <% end %>
    </div>

  <% else %>
    <!-- ÉTAPE 1 : Choix de la classe en cercle -->
    <h1 class="text-center mb-0">Choisis ta classe</h1>

    <div class="circle-container">
      <!-- FLEX au centre -->
      <div class="flex-center">
        <%= link_to new_character_path(flex: true), class: "text-decoration-none" do %>
          <div class="flex-card">
            <span class="flex-icon">?</span>
          </div>
          <div class="flex-label">Flex</div>
        <% end %>
      </div>

      <!-- Classes autour (calculé dynamiquement) -->
      <% @wow_classes.each_with_index do |wow_class, index| %>
        <div class="class-item" style="transform: rotate(<%= index * 27.7 %>deg) translateY(-280px) rotate(<%= -index * 27.7 %>deg);">
          <%= link_to new_character_path(wow_class_id: wow_class.id), class: "text-decoration-none" do %>
            <div class="class-card">
              <%= class_icon(wow_class.name) %>
            </div>
            <span class="class-name"><%= wow_class.name %></span>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
